{
    "name": "hermann8u/slim-skeleton",
    "description": "A personal interpretation of the Slim PHP Framework with my own skeleton",
    "keywords": ["micro-framework", "skeleton", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Hermann",
            "email": "florian.hermann94@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "slim/slim": "^3.9",
        "monolog/monolog": "^1.23",
        "symfony/dotenv": "^4.0",
        "doctrine/dbal": "^2.6",
        "symfony/console": "^4.0",
        "tuupola/slim-jwt-auth": "^3.0",
        "symfony/validator": "^4.0",
        "slim/twig-view": "^2.3",
        "doctrine/annotations": "^1.6",
        "symfony/property-access": "^4.1"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App",
            "Core\\": "src/Core"
        }
    },
    "config": {
        "process-timeout" : 0
    }
}
